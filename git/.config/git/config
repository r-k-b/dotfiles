[push]
	default = simple
[commit]
	gpgsign = true
	template = /home/rkb/.gitmessage
[diff]
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true
# `git difft` is less to type than `git difftool`.
[alias]
	difft = difftool
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[push]
	autoSetupRemote = true
[pull]
	ff = only
[url "git@github.com:"]
	insteadOf = https://github.com/
[fetch]
	prune = true
[core]
	autocrlf = input
	editor = vim
[init]
	defaultBranch = main
[remote "origin"]
	tagopt = --tags
[log]
	date = iso-strict
